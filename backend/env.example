# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=alika_db
DB_PORT=3306

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters_long
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_session_secret_here_minimum_32_characters_long

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:8080

# Frontend URL
FRONTEND_URL=http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
UPLOAD_PATH=./uploads

# Messaging Services
MNOTIFY_API_KEY=your_mnotify_api_key_here
NOTIFY_AFRICA_TOKEN=your_notify_africa_token_here

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

